{
    "background": {
      "scripts": [
        "/lib/jquery-2.2.1.min.js",
        "/lib/google-analytics-bundle.js",
        "/js/bg_script.js"
      ]
    },
    "browser_action": {
       "default_icon": "/img/icon19.png",
       "default_popup": "/html/popup.html"
    },
    "content_scripts": [ {
       "js": [ "/js/cs-page.js" ],
       "matches": [ "http://*/*", "https://*/*" ],
       "run_at": "document_start"
    } ],
    "description": "Test",
    "icons": {
       "128": "/img/icon128.png",
       "19": "/img/icon19.png",
       "256": "/img/icon256.png",
       "38": "/img/icon38.png"
    },
    "manifest_version": 2,
    "name": "Test",
    "permissions": [
       "<all_urls>",
       "activeTab",
       "tabs",
       "http://*/*",
       "https://*/*",
       "webRequest",
       "webNavigation",
       "storage"
    ],
    "short_name": "Test",
    "version": "1.0.0.0",
    "version_name": "1.0.0.0",
    "web_accessible_resources": [ "/img/*" ]
 }
 